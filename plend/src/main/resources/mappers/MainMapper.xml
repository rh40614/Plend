<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="three.people.mapper.mainMapper">

	<select id="noticeAll" resultType="NoticeVO" parameterType="NoticeVO">
		SELECT 
			 nidx
			,title
			,nickName
			,a.date
			,hit
		FROM notice a
  INNER JOIN user b
  		  ON a.uidx = b.uidx 
  	ORDER BY nidx desc
	</select>	
	<select id="faqAll" resultType="FaqVO" parameterType="FaqVO"></select>
	<insert id="insertNotice" parameterType="NoticeVO">
		INSERT INTO notice (
			 uidx
			,category
			,title
			,content
			,fileName
		) VALUES (
			 #{uidx}
			,#{category}
			,#{title}
			,#{content}
			,#{fileName}
		)
	</insert>
	<insert id="insertFaq" parameterType="FaqVO"></insert>
	<update id="noticeModify" parameterType="NoticeVO"></update>
	<update id="faqModify" parameterType="FaqVO"></update>
	<update id="noticeDelete" parameterType="NoticeVO"></update>
	<update id="faqDelete" parameterType="FaqVO"></update>
	<select id="randomPlace" resultType="PlaceVO"></select>
	<select id="eventPlace" resultType="PlaceVO"></select>
	<!-- <select id="reviweALl" resultType="ReviewVO"></select> -->
</mapper>



