<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="three.people.mapper.commonMapper">
	
	<insert id="insertUser" parameterType="UserVO">
	<!-- 일단 유저만 -->
		INSERT INTO user(
			 id
			,password
			,name
			,nickName
			,birth
			,userPhone
			,email
			,gender
			,addr
			,regnum
			,role
		) VALUES (
			 #{id}
			,#{password}
			,#{name}
			,#{nickName}
			,#{birth}
			,#{userPhone}
			,#{email}
			,#{gender}
			,#{addr}
			,#{regnum}
			,#{role}
		)
	</insert>
	
	<select id="login" resultType="UserVO" parameterType="UserVO">
		SELECT 
			 uidx
			,id
			,password
		FROM user 
	   WHERE id = #{id}
	     AND password = #{password}	
	</select>
	
	<select id="selectId" resultType="UserVO" parameterType="UserVO">
		SELECT
			 name
			,email
			,id
		FROM user 
	   WHERE name = #{name}
	     AND email = #{email}
	</select>
	<select id="selectPwd" resultType = "int">
		
	</select>
	
	<select id="idCheck" parameterType="String" resultType="Integer">
		SELECT 
			 count(*)
		  FROM user
		 WHERE id = #{id} 
	</select>
	<select id="nickNameCheck" parameterType="String" resultType="Integer">
		SELECT 
			 count(*)
		  FROM user
		 WHERE nickName = #{nickName}
	</select>
	
</mapper>



